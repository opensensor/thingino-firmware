/dts-v1/;

#include <dt-bindings/input/input.h>
#include "t41.dtsi"
#include <dt-bindings/interrupt-controller/irq.h>

/ {
	compatible = "wyze,camv4", "ingenic,t41";

	mmc0_pwrseq: mmc0_pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios = <&gpb 7 GPIO_ACTIVE_LOW INGENIC_GPIO_NOBIAS>;  /* GPIO 39 = PB7 for SD card power */
	};

	/* WiFi power is always on - no pwrseq needed
	mmc1_pwrseq: mmc1_pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios = <&gpc 14 GPIO_ACTIVE_HIGH INGENIC_GPIO_NOBIAS>;
	};
	*/
};

&uart0 {
	status = "disable";
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pc>;
};

&uart1 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pb>;
};

&uart2 {
	status = "disable";
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pd>;
};

&uart3 {
	status = "disable";
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pb>;
};

&uart4 {
	status = "disable";
	pinctrl-names = "default";
	pinctrl-0 = <&uart4_pb>;
};

&uart5 {
	status = "disable";
	pinctrl-names = "default";
	pinctrl-0 = <&uart5_pd>;
};

&i2c0 {
	pinctrl-0 = <&i2c0_pa>;
	pinctrl-names = "default";
	clock-frequency = <400000>;
	status = "okay";
};

&i2c1 {
	pinctrl-0 = <&i2c1_pb>;
	pinctrl-names = "default";
	clock-frequency = <400000>;
	status = "okay";
};

&i2c2 {
	pinctrl-0 = <&i2c2_pc>;
	pinctrl-names = "default";
	clock-frequency = <400000>;
	status = "okay";
};

&cpufreq {
	status = "okay";
	operating-points = <
		/*KHZ uV */
		1200000	900000
		1104000	900000
		1008000	900000
		912000	900000
		891000	900000
		750000	900000
		600000	900000
		500000	900000
		400000	900000
		375000	900000
		300000	900000
		200000	900000
			>;
};

&pdma {
	status = "okay";
};

/* SD Card - MMC0 on PB */
&msc0 {
	status = "okay";
	pinctrl-names = "default";
	cap-mmc-highspeed;
	max-frequency = <25000000>;
	bus-width = <4>;
	voltage-ranges = <1800 3300>;
	cd-inverted;

	/* special property */
	ingenic,wp-gpios = <0>;
	ingenic,cd-gpios = <&gpb 6 GPIO_ACTIVE_LOW INGENIC_GPIO_NOBIAS>;  /* GPIO 70 = PB6 */
	ingenic,rst-gpios = <0>;
	pinctrl-0 = <&msc0_pb>;
	mmc-pwrseq = <&mmc0_pwrseq>;
};

/* SDIO WiFi - MMC1 on PC */
&msc1 {
	status = "okay";
	pinctrl-names = "default";
	cap-sd-highspeed;
	cap-sdio-irq;
	max-frequency = <25000000>;  /* Reduced from 50MHz to 25MHz to match stock firmware - fixes SDIO errors in AP mode */
	bus-width = <4>;
	voltage-ranges = <1800 3300>;
	non-removable;
	keep-power-in-suspend;

	/* special property */
	ingenic,wp-gpios = <0>;
	ingenic,rst-gpios = <0>;
	ingenic,sdio_clk = <1>;  /* Enable SDIO clock for WiFi - required for manual card detection */
	pinctrl-0 = <&msc1_pc>;
	/* mmc-pwrseq = <&mmc1_pwrseq>; */  /* WiFi power is always on */
};

&sfc0 {
	status = "okay";
	pinctrl-names = "default";
	ingenic,sfc-max-frequency = <100000000>;
	ingenic,use_board_info      = /bits/ 8 <0>;
	ingenic,spiflash_param_offset = <0>;
	ingenic,spiflash_type = <0>;
	pinctrl-0 = <&sfc0_pa>;
};

&otg {
	g-use-dma;
	dr_mode = "otg";
	status = "okay";
};

&otg_phy {
	dr_mode = "otg";
	compatible = "ingenic,innophy", "syscon";
	ingenic,drvvbus-gpio = <0>;
	status = "okay";
};

/ {
	extclk: extclk {
		clock-frequency = <24000000>;
	};

	gpio_keys: gpio_keys {
		compatible = "gpio-keys";

		reset {
			label = "Reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpd 11 GPIO_ACTIVE_LOW INGENIC_GPIO_NOBIAS>;  /* GPIO 107 = PD11 */
			gpio-key,wakeup;
		};
	};
};

&el200 {
	status = "okay";
};

&jpeg {
	status = "okay";
};

&dpu {
	status = "disable";
};

